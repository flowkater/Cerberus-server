						<tbody>
							<% @leak_instances.each do |i|  %>
                                <tr>
                                  <td><%= i.instancename %></td>
                                  <td>
                                   <div class="fancyprogress">
                                   <span class="orange" style="width: <%= i.leak_suspect %>%;"><span><%= i.leak_suspect %>%</span></span>
