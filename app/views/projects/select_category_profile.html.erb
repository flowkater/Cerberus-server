<%= render 'projects/sidebar' %>
<div class="main-content">
	<div class="container">
		<div class="row">
			<div class="area-top clearfix">
				<div class="pull-left header">
					<h3 class="title">
						Profile
					</h3>
				</div>
			</div>
		</div>
		<%= form_for [@project, @report] do |f| %>
			<%= render "reports/#{@report.current_step}_step_profile", f: f %>
			<div class="container" >
				<div class="pull-right">
					<%= f.submit "Back", name: "previous_button", class: "
					btn btn-large btn-default" unless @report.first_step? %>
					<%= f.submit "Next", class: "btn btn-large btn-default" %>
				</div>
			</div>			
		<% end %>
	</div>
</div>