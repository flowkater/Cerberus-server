<%= render 'projects/sidebar' %>
<div class="main-content">
	<div class="container">
		<div class="row">
			<div class="area-top clearfix">
				<div class="pull-left header">
					<h3 class="title">
						Profile
					</h3>
				</div>
			</div>
		</div>

		<div class="container padded">
			<div class="row">
				<div id="breadcrumbs">

					<div class="breadcrumb-button blue">
						<span class="breadcrumb-label">
							Scenario
						</span>
						<span class="breadcrumb-arrow">
							<span></span>
						</span>
					</div>

					<div class="breadcrumb-button">
						<span class="breadcrumb-label">
							Scenario Test Case List
						</span>
						<span class="breadcrumb-arrow">
							<span></span>
						</span>
					</div>
				</div>
			</div>
		</div>

		
			
		<div class="container">
			<div class="row">
			
				<div class="col-md-12" >
				
					<div class="box" >
						<div class="box-header">
							<span class="title"><i class="icon-edit"></i>Scenario Test Case List</span>
							
							<%= link_to "Add Scenario", new_project_scenario_path(@project), class: "btn btn-large btn-blue pull-right" %>

						</div>
						<div class="box-content">
							<table id="scenario_list" class="table table-normal">
								<thead>
									<tr>
										<td style="width: 90%;">Scenario Info</td>
										<td style="width: 10%;">Remove</td>
									</tr>
								</thead>
								<tbody>
									<% @scenarios.each do |s| %>
										<tr>
											<td id="content">
												<h2 style="margin-top: 5px;"><%= s.name %> </h2>
												<span>
													<%= s.description %>
												</span>
											</td>
											<td>
												<%= link_to "remove", [@project, s], confirm: "Are you sure?", method: :delete, class: "btn btn-red" %>
											</td>
										</tr>
									<% end  %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>